# ============================================================================
# API Directory - Additional Security
# ============================================================================

# Protect .env files
<FilesMatch "^\.env">
    Require all denied
</FilesMatch>

<Files ".env.example">
    Require all granted
</Files>

# Only allow access to PHP files (block access to other files)
<FilesMatch "\.(txt|log|md|json|lock)$">
    Require all denied
</FilesMatch>

# Ensure PHP is enabled for API endpoints
<IfModule mod_mime.c>
    AddType application/x-httpd-php .php
</IfModule>
