---
import Layout from '~/layouts/PageLayout.astro';
import HeroSimple from '~/components/widgets/HeroSimple.astro';
import ContactForm from '~/components/widgets/ContactForm.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Kontakt - Jetzt unverbindlich anfragen | Stefanie Leidel Darmtherapie',
  description:
    'Hast du Fragen zur Darmtherapie oder möchtest ein Erstgespräch vereinbaren? Kontaktiere mich unverbindlich – ich melde mich innerhalb von 24 Stunden.',
};
---

<Layout metadata={metadata}>
  <HeroSimple tagline="Kontakt" title="Du hast Fragen? Ich bin für dich da!" />

  <ContactForm
    id="form"
    title="Schreib mir deine Nachricht"
    subtitle="Du hast Fragen zur Darmtherapie, zu meinem Angebot oder möchtest direkt ein Erstgespräch vereinbaren? Nutze gerne das Kontaktformular – ich melde mich innerhalb von 24 Stunden bei dir. Tipp: Im FAQ-Bereich findest du bereits Antworten auf viele häufige Fragen!"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Nachricht',
    }}
    disclaimer={{
      label:
        'Durch das Absenden dieses Kontaktformulars stimmst du der Erhebung und Verarbeitung deiner persönlichen Daten gemäß unserer Datenschutzerklärung zu.',
    }}
    description="Ich antworte in der Regel innerhalb von 24 Stunden (Montag–Freitag). Ich freue mich auf deine Nachricht!"
  />
  <!-- Call To Action **************** -->
  <CallToAction
    title="Lieber direkt einen Termin buchen?"
    subtitle="Du möchtest keine Zeit verlieren und direkt starten? Buche jetzt dein unverbindliches Erstgespräch online – einfach, schnell und ohne Wartezeiten."
    actions={[
      {
        variant: 'primary',
        text: 'Jetzt Termin buchen',
        href: '/termin-buchen',
      },
    ]}
    bg={`<div class="absolute inset-0 dark:bg-[url(~/assets/images/moritz-ludtke-hA_WcioMg7Q-unsplash.jpg)] bg-cover bg-[url(~/assets/images/kristine-cinate-QvjL4y7SF9k-unsplash.jpg)]"></div>`}
  />
</Layout>
