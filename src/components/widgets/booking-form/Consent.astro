---
// Consent.astro - Consent Declaration
// Section for data protection and consent declaration
---

<!-- Consent Declaration -->
<div class="pb-8">
  <div class="space-y-6">
    <div class="flex items-start">
      <div class="flex h-5 items-center">
        <input
          id="datenschutz"
          name="datenschutz"
          type="checkbox"
          required
          class="text-primary-600 focus:ring-primary-500 h-5 w-5 rounded border-gray-300 transition duration-150 focus:ring-2"
        />
      </div>
      <div class="ml-3">
        <label for="datenschutz" class="text-base text-gray-700 dark:text-white">
          Ich habe die <a
            href="/datenschutz"
            target="_blank"
            class="text-primary-600 hover:text-primary-700 font-medium underline">Datenschutzerkl√§rung</a
          > gelesen und akzeptiere diese. <span class="text-base text-red-500">*</span>
        </label>
      </div>
    </div>
  </div>
</div>
