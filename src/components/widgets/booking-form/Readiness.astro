---
// Readiness.astro - General Questions (Readiness)
// Section for questions about readiness for changes and treatment
import CollapsibleSection from '~/components/ui/CollapsibleSection.astro';
---

<!-- General Questions (Readiness) -->
<CollapsibleSection title="Allgemeine Fragen" isOptional={true}>
  <div class="space-y-6">
    <div>
      <label for="bereitschaft_nahrungsergaenzung" class="mb-3 block text-base font-medium">
        Bist Du bereit, für eine gewisse Zeit Nahrungsergänzungsmittel und andere Präparate einzunehmen?
      </label>
      <select
        id="bereitschaft_nahrungsergaenzung"
        name="bereitschaft_nahrungsergaenzung"
        class="text-base dark:bg-dark block w-full rounded-lg border border-gray-200 bg-white px-4 py-3 dark:border-gray-600"
      >
        <option value="">Bitte wählen</option>
        <option value="ja">Ja</option>
        <option value="nein">Nein</option>
        <option value="vielleicht">Vielleicht</option>
      </select>
    </div>

    <div>
      <label for="bereitschaft_investieren" class="mb-3 block text-base font-medium">
        Bist Du bereit, in Dich zu investieren?
      </label>
      <select
        id="bereitschaft_investieren"
        name="bereitschaft_investieren"
        class="text-base dark:bg-dark block w-full rounded-lg border border-gray-200 bg-white px-4 py-3 dark:border-gray-600"
      >
        <option value="">Bitte wählen</option>
        <option value="ja">Ja</option>
        <option value="nein">Nein</option>
        <option value="vielleicht">Vielleicht</option>
      </select>
    </div>

    <div>
      <label for="bereitschaft_lebensstil" class="mb-3 block text-base font-medium">
        Bist Du bereit, Deinen Ernährungs- und Lebensstil für Deine Gesundheit anzupassen?
      </label>
      <select
        id="bereitschaft_lebensstil"
        name="bereitschaft_lebensstil"
        class="text-base dark:bg-dark block w-full rounded-lg border border-gray-200 bg-white px-4 py-3 dark:border-gray-600"
      >
        <option value="">Bitte wählen</option>
        <option value="ja">Ja</option>
        <option value="nein">Nein</option>
        <option value="vielleicht">Vielleicht</option>
      </select>
    </div>
  </div>
</CollapsibleSection>
