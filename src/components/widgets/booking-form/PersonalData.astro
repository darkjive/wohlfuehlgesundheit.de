---
// PersonalData.astro - Personal Data Section
import { Icon } from 'astro-icon/components';
---

<!-- Your Information -->
<div class="border-b border-gray-200 pb-8 dark:border-gray-700">
  <h3 class="mb-6 flex text-xl font-semibold text-gray-900 dark:text-gray-100">
    <Icon name="tabler:user" class="text-primary-600 mr-2 h-8 w-8" />
    Deine Angaben
  </h3>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <label for="vorname" class="mb-3 block text-base font-medium">
        Vorname <span class="text-base text-red-500">*</span>
      </label>
      <input
        type="text"
        id="vorname"
        name="vorname"
        required
        class="text-md dark:bg-dark block w-full rounded-lg border border-gray-200 bg-white px-4 py-3 dark:border-none"
      />
    </div>

    <div>
      <label for="nachname" class="mb-3 block text-base font-medium">
        Nachname <span class="text-base text-red-500">*</span>
      </label>
      <input
        type="text"
        id="nachname"
        name="nachname"
        required
        class="text-md dark:bg-dark block w-full rounded-lg border border-gray-200 bg-white px-4 py-3 dark:border-none"
      />
    </div>

    <div class="sm:col-span-2">
      <label for="adresse" class="mb-3 block text-base font-medium">
        Adresse <span class="text-sm text-gray-300 dark:text-gray-500">(Optional)</span>
      </label>
      <input
        type="text"
        id="adresse"
        name="adresse"
        class="text-md dark:bg-dark block w-full rounded-lg border border-gray-200 bg-white px-4 py-3 dark:border-none"
      />
    </div>

    <div>
      <label for="plz" class="mb-3 block text-base font-medium">
        PLZ <span class="text-sm text-gray-300 dark:text-gray-500">(Optional)</span>
      </label>
      <input
        type="text"
        id="plz"
        name="plz"
        class="text-md dark:bg-dark block w-full rounded-lg border border-gray-200 bg-white px-4 py-3 dark:border-none"
      />
    </div>

    <div>
      <label for="ort" class="mb-3 block text-base font-medium">
        Ort <span class="text-sm text-gray-300 dark:text-gray-500">(Optional)</span>
      </label>
      <input
        type="text"
        id="ort"
        name="ort"
        class="text-md dark:bg-dark block w-full rounded-lg border border-gray-200 bg-white px-4 py-3 dark:border-none"
      />
    </div>

    <div>
      <label for="telefon" class="mb-3 block text-base font-medium">
        Telefon <span class="text-base text-red-500">*</span>
      </label>
      <input
        type="tel"
        id="telefon"
        name="telefon"
        required
        class="text-md dark:bg-dark block w-full rounded-lg border border-gray-200 bg-white px-4 py-3 dark:border-none"
      />
    </div>

    <div>
      <label for="email" class="mb-3 block text-base font-medium">
        E-Mail-Adresse <span class="text-base text-red-500">*</span>
      </label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="text-md dark:bg-dark block w-full rounded-lg border border-gray-200 bg-white px-4 py-3 dark:border-none"
      />
    </div>
  </div>
</div>
