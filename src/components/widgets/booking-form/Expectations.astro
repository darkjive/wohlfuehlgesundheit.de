---
// Expectations.astro - Expectations and Origin
// Section for questions about expectations and how contact was established
import CollapsibleSection from '~/components/ui/CollapsibleSection.astro';
---

<!-- Expectations and Origin -->
<CollapsibleSection title="Erwartungen und Herkunft" isOptional={true}>
  <div class="space-y-6">
    <div>
      <label for="erwartungen" class="mb-3 block text-base font-medium">
        Was erwartest Du von mir und meiner Arbeit?
      </label>
      <textarea
        id="erwartungen"
        name="erwartungen"
        rows="3"
        class="text-base dark:bg-dark block w-full rounded-lg border border-gray-200 bg-white px-4 py-3 dark:border-none"
      ></textarea>
    </div>

    <div>
      <label for="aufmerksam_durch" class="mb-3 block text-base font-medium">
        Wie bist Du auf mich aufmerksam geworden?
      </label>
      <input
        type="text"
        id="aufmerksam_durch"
        name="aufmerksam_durch"
        class="text-base dark:bg-dark block w-full rounded-lg border border-gray-200 bg-white px-4 py-3 dark:border-none"
      />
    </div>
  </div>
</CollapsibleSection>
