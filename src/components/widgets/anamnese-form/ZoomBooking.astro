---
// ZoomBooking.astro - Zoom-Terminbuchung
// Abschnitt für die Buchung eines Zoom-Erstgesprächs
import { Icon } from 'astro-icon/components';
---

<!-- Zoom-Terminbuchung -->
<div class="border-b border-gray-200 pb-8">
  <h3 class="mb-6 flex items-center text-xl font-semibold text-gray-900 dark:text-gray-100">
    <Icon name="tabler:calendar" class="text-primary-600 mr-2 h-6 w-6" />
    Zoom-Erstgespräch Termin buchen
  </h3>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <div>
      <label for="datum" class="mb-3 block text-base font-medium">
        Wunschtermin (Datum) <span class="text-xl text-red-500">*</span>
      </label>
      <input
        type="date"
        id="datum"
        name="datum"
        required
        min=""
        class="text-md dark:bg-dark block w-full rounded-lg border border-gray-200 bg-white px-4 py-3 dark:border-none"
      />
      <p class="mt-1 text-sm text-gray-300">Bitte wähle ein Datum in der Zukunft</p>
    </div>

    <div>
      <label for="uhrzeit" class="mb-3 block text-base font-medium">
        Wunschzeit <span class="text-xl text-red-500">*</span>
      </label>
      <select
        id="uhrzeit"
        name="uhrzeit"
        required
        class="text-md dark:bg-dark block w-full rounded-lg border border-gray-200 bg-white px-4 py-3 dark:border-none"
      >
        <option value="">Bitte wählen</option>
        <option value="08:00">08:00 Uhr</option>
        <option value="09:00">09:00 Uhr</option>
        <option value="10:00">10:00 Uhr</option>
        <option value="11:00">11:00 Uhr</option>
        <option value="12:00">12:00 Uhr</option>
        <option value="13:00">13:00 Uhr</option>
        <option value="14:00">14:00 Uhr</option>
        <option value="15:00">15:00 Uhr</option>
        <option value="16:00">16:00 Uhr</option>
        <option value="17:00">17:00 Uhr</option>
        <option value="18:00">18:00 Uhr</option>
        <option value="19:00">19:00 Uhr</option>
      </select>
    </div>

    <div>
      <label for="dauer" class="mb-3 block text-base font-medium">
        Gesprächsdauer <span class="text-xl text-red-500">*</span>
      </label>
      <select
        id="dauer"
        name="dauer"
        required
        class="text-md dark:bg-dark block w-full rounded-lg border border-gray-200 bg-white px-4 py-3 dark:border-none"
      >
        <option value="40" selected>40 Minuten (empfohlen)</option>
        <option value="20">20 Minuten</option>
      </select>
    </div>
  </div>
</div>
