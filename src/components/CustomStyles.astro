---
import '@fontsource-variable/noto-serif-display/wght-italic.css';
import '@fontsource-variable/noto-serif-display/wght.css';
import '@fontsource-variable/quicksand/wght.css';
---

<style is:inline>
  /* Font display optimization */
  @font-face {
    font-family: 'Quicksand Variable';
    font-display: swap;
  }

  @font-face {
    font-family: 'Noto Serif Display Variable';
    font-display: swap;
  }

  :root {
    /* Font families */
    --aw-font-sans: 'Quicksand Variable', system-ui, -apple-system, sans-serif;
    --aw-font-serif: 'Noto Serif Display Variable', Georgia, serif;
    --aw-font-heading: 'Noto Serif Display Variable', Georgia, serif;
    --aw-font-italic: 'Noto Serif Display Variable', Georgia, serif;
    --aw-font-light: 'Quicksand Variable', system-ui, -apple-system, sans-serif;
    --aw-font-medium: 'Quicksand Variable', system-ui, -apple-system, sans-serif;

    /* Font weights */
    --aw-font-weight-sans: 400;
    --aw-font-weight-serif: 100;
    --aw-font-weight-heading: 700;
    --aw-font-weight-italic: 600;
    --aw-font-weight-light: 300;
    --aw-font-weight-medium: 500;

    /* Font styles */
    --aw-font-style-sans: normal;
    --aw-font-style-serif: italic;
    --aw-font-style-heading: italic;
    --aw-font-style-italic: italic;
    --aw-font-style-light: normal;
    --aw-font-style-medium: normal;

    /* Light Mode Colors */
    --aw-color-primary: #777460;
    --aw-color-secondary: #DDD5BD;
    --aw-color-accent: #8A856F;

    --aw-color-bg-page: #FBFCF4;
    --aw-color-bg-alt: #C4B99E;

    --aw-color-text-default: #000000;
    --aw-color-text-muted: #8A856F;
  }

  :root ::selection {
    background-color: #777460;
    color: #FBFCF4;
  }

  .dark {
    /* Font families */
    --aw-font-sans: 'Quicksand Variable';
    --aw-font-serif: 'Noto Serif Display Variable';
    --aw-font-heading: 'Noto Serif Display Variable';
    --aw-font-italic: 'Noto Serif Display Variable';
    --aw-font-light: 'Quicksand Variable';
    --aw-font-medium: 'Quicksand Variable';

    /* Font weights */
    --aw-font-weight-sans: 400;
    --aw-font-weight-serif: 100;
    --aw-font-weight-heading: 700;
    --aw-font-weight-italic: 600;
    --aw-font-weight-light: 300;
    --aw-font-weight-medium: 500;

    /* Font styles */
    --aw-font-style-sans: normal;
    --aw-font-style-serif: italic;
    --aw-font-style-heading: italic;
    --aw-font-style-italic: italic;
    --aw-font-style-light: normal;
    --aw-font-style-medium: normal;

    /* Dark Mode Colors */
    --aw-color-primary: #AFA58D;
    --aw-color-secondary: #C4B99E;
    --aw-color-accent: #DDD5BD;

    --aw-color-bg-page: #777460;
    --aw-color-bg-alt: #8A856F;

    --aw-color-text-default: #FFFFFF;
    --aw-color-text-muted: #DDD5BD;
  }

  .dark ::selection {
    background-color: #8A856F;
    color: #FBFCF4;
  }

  /* Auto-hide Navigation für mobile Geräte */
  #header[data-aw-sticky-header] {
    transition: transform 0.3s ease-in-out;
  }

  #header[data-aw-sticky-header].header-hidden {
    transform: translateY(-100%);
  }

  /* ViewTransitions: Sanfte Übergänge zwischen Seiten */
  @media (prefers-reduced-motion: no-preference) {
    ::view-transition-old(root),
    ::view-transition-new(root) {
      animation-duration: 0.3s;
      animation-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }
  }

  /* Font utility classes using CSS variables */
  .font-serif {
    font-family: var(--aw-font-serif);
    font-weight: var(--aw-font-weight-serif);
    font-style: var(--aw-font-style-serif);
  }

  .font-heading {
    font-family: var(--aw-font-heading);
    font-weight: var(--aw-font-weight-heading);
    font-style: var(--aw-font-style-heading);
  }

  .font-italic {
    font-family: var(--aw-font-italic);
    font-weight: var(--aw-font-weight-italic);
    font-style: var(--aw-font-style-italic);
  }

  .font-sans {
    font-family: var(--aw-font-sans);
    font-weight: var(--aw-font-weight-sans);
    font-style: var(--aw-font-style-sans);
  }

  .font-light {
    font-family: var(--aw-font-light);
    font-weight: var(--aw-font-weight-light);
    font-style: var(--aw-font-style-light);
  }

  .font-medium {
    font-family: var(--aw-font-medium);
    font-weight: var(--aw-font-weight-medium);
    font-style: var(--aw-font-style-medium);
  }
</style>
