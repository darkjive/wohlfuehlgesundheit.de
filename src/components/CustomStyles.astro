---
import '@fontsource-variable/noto-serif-display';
import '@fontsource-variable/quicksand';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Quicksand Variable';
    --aw-font-serif: 'Noto Serif Display Variable';
    --aw-font-heading: 'Noto Serif Display Variable';

    --aw-color-primary: rgb(42, 112, 13);
    --aw-color-secondary: rgb(245, 245, 245);
    --aw-color-accent: rgb(42, 112, 13);

    --aw-color-text-heading: rgb(22, 22, 22);
    --aw-color-text-default: rgb(22, 22, 22);
    --aw-color-text-muted: rgb(22, 22, 22);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(25, 66, 7);

    ::selection {
      background-color: rgb(42, 112, 13);
      color: rgb(255, 255, 255);
    }
  }

  .dark {
    --aw-font-sans: 'Quicksand Variable';
    --aw-font-serif: 'Noto Serif Display Variable';
    --aw-font-heading: 'Noto Serif Display Variable';

    --aw-color-primary: rgb(39, 100, 13);
    --aw-color-secondary: rgb(230, 230, 230);
    --aw-color-accent: rgb(255, 255, 255);

    --aw-color-text-heading: rgb(126, 145, 129);
    --aw-color-text-default: rgb(255, 255, 255);
    --aw-color-text-muted: rgb(255, 255, 255);
    --aw-color-bg-page: rgb(42, 112, 13);

    ::selection {
      background-color: black;
      color: rgb(255, 255, 255);
    }
  }

  /* Auto-hide Navigation für mobile Geräte */
  #header[data-aw-sticky-header] {
    transition: transform 0.3s ease-in-out;
  }

  #header[data-aw-sticky-header].header-hidden {
    transform: translateY(-100%);
  }

  /* ===================================
     Scroll-Animationen (CSS-basiert)
     =================================== */

  /* Initiale Zustände für animierte Elemente */
  [data-aos] {
    opacity: 0;
    transition-property: opacity, transform;
    transition-duration: 1s;
    transition-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  /* Sichtbarer Zustand nach Animation */
  [data-aos].aos-animate {
    opacity: 1;
    transform: none;
  }

  /* fade-up Animation */
  [data-aos='fade-up'] {
    transform: translateY(50px);
  }

  /* fade-in Animation */
  [data-aos='fade-in'] {
    transform: none;
  }

  /* flip-up Animation */
  [data-aos='flip-up'] {
    transform: perspective(1000px) rotateX(90deg);
    transform-style: preserve-3d;
  }

  /* flip-left Animation */
  [data-aos='flip-left'] {
    transform: perspective(1000px) rotateY(-90deg);
    transform-style: preserve-3d;
  }

  /* flip-right Animation */
  [data-aos='flip-right'] {
    transform: perspective(1000px) rotateY(90deg);
    transform-style: preserve-3d;
  }

  /* Verzögerungen */
  [data-aos-delay='50'].aos-animate {
    transition-delay: 50ms;
  }

  [data-aos-delay='150'].aos-animate {
    transition-delay: 150ms;
  }

  /* Respektiere prefers-reduced-motion */
  @media (prefers-reduced-motion: reduce) {
    [data-aos] {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }

  /* ViewTransitions: Sanfte Übergänge zwischen Seiten */
  @media (prefers-reduced-motion: no-preference) {
    ::view-transition-old(root),
    ::view-transition-new(root) {
      animation-duration: 0.3s;
      animation-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }
  }
</style>
