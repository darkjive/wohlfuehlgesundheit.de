---
import { Icon } from 'astro-icon/components';
import { twMerge } from 'tailwind-merge';
import type { CallToAction as Props } from '~/types';

const {
  variant = 'secondary',
  target,
  text = Astro.slots.render('default'),
  icon = '',
  class: className = '',
  type,
  ...rest
} = Astro.props;

const variants = {
  primary: 'btn-primary dark:btn-secondary',
  secondary: 'btn-secondary dark:btn-primary',
  tertiary: 'btn btn-tertiary',
  link: 'cursor-pointer hover:text-primary',
};

// Generate unique ID for each button instance
const uniqueId = `btn-${Math.random().toString(36).substr(2, 9)}`;
---

{
  type === 'button' || type === 'submit' || type === 'reset' ? (
    <span class="button--bubble__container">
      <button
        type={type}
        class={twMerge('button button--bubble', variants[variant] || '', className)}
        data-button-id={uniqueId}
        {...rest}
      >
        <Fragment set:html={text} />
        {icon && <Icon name={icon} class="-mr-1.5 ml-1 inline-block h-5 w-5 rtl:-ml-1.5 rtl:mr-1" />}
      </button>
      <span class="button--bubble__effect-container">
        <span class="circle top-left"></span>
        <span class="circle top-left"></span>
        <span class="circle top-left"></span>
        <span class="button effect-button"></span>
        <span class="circle bottom-right"></span>
        <span class="circle bottom-right"></span>
        <span class="circle bottom-right"></span>
      </span>
    </span>
  ) : (
    <span class="button--bubble__container">
      <a
        class={twMerge('button button--bubble', variants[variant] || '', className)}
        {...(target ? { target: target, rel: 'noopener noreferrer' } : {})}
        data-button-id={uniqueId}
        {...rest}
      >
        <Fragment set:html={text} />
        {icon && <Icon name={icon} class="-mr-1.5 ml-1 inline-block h-5 w-5 rtl:-ml-1.5 rtl:mr-1" />}
      </a>
      <span class="button--bubble__effect-container">
        <span class="circle top-left"></span>
        <span class="circle top-left"></span>
        <span class="circle top-left"></span>
        <span class="button effect-button"></span>
        <span class="circle bottom-right"></span>
        <span class="circle bottom-right"></span>
        <span class="circle bottom-right"></span>
      </span>
    </span>
  )
}
