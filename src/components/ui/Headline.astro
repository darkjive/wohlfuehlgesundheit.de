---
import type { Headline as Props } from '~/types';
import { twMerge } from 'tailwind-merge';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  classes = {},
} = Astro.props;

const {
  container: containerClass = 'max-w-3xl',
  title: titleClass = 'text-3xl md:text-5xl ',
  subtitle: subtitleClass = '',
} = classes;
---

{
  (title || subtitle || tagline) && (
    <div
      data-animate
      data-anim-type="fade-up"
      data-anim-delay="100"
      class={twMerge('mb-8 text-center md:mx-auto md:mb-12', containerClass)}
    >
      {tagline && <p class="text-base uppercase tracking-wide text-gray-400 dark:text-gray-300" set:html={tagline} />}
      {title && (
        <h2
          class={twMerge('leading-tighter text-heading font-heading text-3xl font-bold tracking-tighter', titleClass)}
          set:html={title}
        />
      )}

      {subtitle && <p class={twMerge('mt-4 text-muted', subtitleClass)} set:html={subtitle} />}
    </div>
  )
}
