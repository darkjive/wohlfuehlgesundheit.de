---
import type { HTMLTag } from 'astro/types';
import type { Widget } from '~/types';
import { twMerge } from 'tailwind-merge';
import Background from './Background.astro';

export interface Props extends Widget {
  containerClass?: string;
  ['as']?: HTMLTag;
}

const { id, isDark = false, containerClass = '', bg, as = 'section' } = Astro.props;

const WrapperTag = as;
---

<WrapperTag
  data-animate
  data-anim-type="fade-in"
  data-anim-delay="50"
  class="not-prose relative scroll-mt-[80px] border-t dark:border-none"
  {...id ? { id } : {}}
>
  <div class="pointer-events-none absolute inset-0 -z-[1]" aria-hidden="true">
    <slot name="bg">
      {bg ? <Fragment set:html={bg} /> : <Background isDark={isDark} />}
    </slot>
  </div>
  <div
    data-animate
    data-anim-type="fade-up"
    data-anim-delay="100"
    data-anim-stagger="80"
    class:list={[
      twMerge('relative mx-auto max-w-7xl px-4 py-12 text-default md:px-6 md:py-16 lg:py-20', containerClass),
      { dark: isDark },
    ]}
  >
    <slot />
  </div>
</WrapperTag>
